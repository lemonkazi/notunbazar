	</global>

	<frontend>

    	<routers>
            <Ebizmarts_Customerprofile>
                <use>standard</use>
                <args>
                    <module>Ebizmarts_Customerprofile</module>
                    <frontName>customerprofile</frontName>
                </args>
            </Ebizmarts_Customerprofile>
        </routers>


		<layout>
		    <updates>
		        <customerprofile module="Ebizmarts_Customerprofile">
		            <file>customerprofile.xml</file>
		        </customerprofile>
		    </updates>
		</layout>

        <translate>
            <modules>
                <Ebizmarts_Customerprofile>
                    <files>
                        <default>Ebizmarts_Customerprofile.csv</default>
                    </files>
                </Ebizmarts_Customerprofile>
            </modules>
        </translate>

    </frontend>

</config>
