<?xml version="1.0"?>   
<layout version="1.0.0">   
  <classified_index_index>   
    <reference name="root">   
      <action method="setTemplate"><template>page/1column.phtml</template></action>   
    </reference>   
    <reference name="content">   
      <block type="classified/index" name="classified_index" template="classified/index.phtml"/>    
    </reference>   
  </classified_index_index>   
  
   <classified_send_index translate="label">
        <label>Customer My adv</label>   
     <reference name="root">   
      <action method="setTemplate"><template>page/1column.phtml</template></action>   
    </reference>   
   <reference name="content">   
      <block type="classified/index" name="classified_send" template="classified/sendseller.phtml"/>    
    </reference> 
  </classified_send_index> 
  
  <classified_myad_index>
       <update handle="customer_account" />
      <reference name="my.account.wrapper">
          <block type="classified/index" name="customer_classified" template="classified/Myad/list.phtml"/>
      </reference>
  </classified_myad_index>

    <classified_myad_edit>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="classified/myad_edit" name="customer_classified"
                   template="classified/Myad/editadv.phtml"/>
        </reference>
    </classified_myad_edit>
    
      <classified_message_index>
       <update handle="customer_account" />
      <reference name="my.account.wrapper">
          <block type="classified/index" name="customer_classified" template="classified/Message/messages.phtml"/>
      </reference>
  </classified_message_index>
  
      <classified_message_show>
        <update handle="customer_account" />
        <reference name="my.account.wrapper">
            <block type="classified/message_show" name="customer_classified"
                   template="classified/Message/show.phtml"/>
        </reference>
    </classified_message_show>
    
    <customer_account>
    <reference name="customer_account_navigation">
      <action method="addLink" translate="label" module="classified"><name>myads</name><path>classified/myad</path><label>My Advertisements</label></action>
        <action method="addLink" translate="label" module="classified"><name>message</name><path>classified/message</path><label>My Messages</label></action>

    </reference>
    </customer_account>  
    
        <classified_profile_view>
            <reference name="root">
                <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            </reference>
            <reference name="content">
            <block type="classified/profile" name="customer_profile" template="classified/profile.phtml"/>
                <block type="classified/profile" name="product_list" template="classified/list_ad.phtml">
                    <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                        <block type="page/html_pager" name="product_list_toolbar_pager"/>
                    </block>
                    <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
                </block>
        </reference>
            <reference name="right">
                <block type="cms/block" name="sponsored_ad" before="-">
                    <action method="setBlockId"><block_id>sponsored_ad</block_id></action>
                </block>
            </reference>
    </classified_profile_view>


    <customer_account_edit>
		<reference name="customer_edit">
		    <action method="setTemplate"><template>classified/form/edit_with_profile.phtml</template></action>
	    </reference>
    </customer_account_edit>

